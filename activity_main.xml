<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="40dp"
       android:ems="10"
       android:gravity="center"
       android:text="TECHNICIAN REGISTRATION"
       android:textSize="30sp"
       android:id="@+id/reg"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter technician name"
        android:layout_below="@+id/reg"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:gravity="center"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e2"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter user name"
        android:layout_below="@+id/e1"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:gravity="center"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e3"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter email"
        android:layout_below="@+id/e2"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:gravity="center"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e4"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter adhaar number"
        android:layout_below="@+id/e3"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:gravity="center"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e5"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter phone number"
        android:layout_below="@+id/e4"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:gravity="center"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e6"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter your adress"
        android:layout_below="@+id/e5"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:gravity="center"/>
 <EditText
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:id="@+id/e7"
     android:ems="10"
     android:inputType="textPersonName"
     android:hint="Enter password"
     android:layout_below="@+id/e6"
     android:layout_centerHorizontal="true"
     android:layout_margin="20dp"
     android:gravity="center"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e8"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="confirm password"
        android:layout_below="@+id/e7"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b1"
        android:layout_below="@+id/e8"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:text="REGISTER"/>

</RelativeLayout>
</ScrollView>